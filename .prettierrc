{
  "printWidth": 80,
  "semi": true,
  "tabWidth": 2,
  "useTabs": false,
  "parser": "typescript",
  "arrowParens": "always",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ".*rc",
      "options": {
        "singleQuote": false,
        "parser": "json"
      }
    }
  ]
}
